@model quiz.Models.Entities.Quiz


        <!-- Registration Form Card -->
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">Registration Form</h4>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }


                <form asp-action="Create" method="post">
                    <label>Quiz Title</label>
                    <input asp-for="QuizTitle" />

                    <label>Question</label>
                    <input asp-for="QuestionText" />

                    <label>Option 1</label>
                    <input asp-for="Option1" />

                    <label>Option 2</label>
                    <input asp-for="Option2" />

                    <label>Option 3</label>
                    <input asp-for="Option3" />

                    <label>Option 4</label>
                    <input asp-for="Option4" />

                    <label>Correct Option</label>
                    <input asp-for="CorrectOption" />

                    <button type="submit">Save Question</button>
                </form>

               
            </div>
        </div>

<!-- Optional Styling -->
<style>
    .card {
        border-radius: 12px;
    }

    .card-title {
        font-weight: bold;
        font-size: 1.8rem;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
    }

    .list-group-item {
        font-size: 0.95rem;
        word-break: break-all;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
